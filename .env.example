# JWT Configuration (for local auth)
JWT_SECRET=your-super-secret-jwt-key-here

# External API Configuration (for third-party auth)
USE_EXTERNAL_AUTH=false
EXTERNAL_API_URL=https://your-api.com/api

# Set USE_EXTERNAL_AUTH=true to use external API for authentication
# When enabled, tokens will be verified against EXTERNAL_API_URL/auth/verify
# When disabled, tokens will be verified locally using JWT_SECRET

# Optional: External JWT Worker URL (for production)
JWT_WORKER_URL=https://your-jwt-worker.example.com

# Database Configuration (if you add a database)
DATABASE_URL=your-database-connection-string

# Email Configuration (if you add email functionality)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Application Settings
APP_NAME=Your App
APP_URL=http://localhost:5173